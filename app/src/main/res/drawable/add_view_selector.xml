<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#00ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/md_green_300"/>
                    <solid android:color="@color/grid_grey_opacity"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/plus_grid_wide"/>
            </item>
        </layer-list>
    </item>

</selector>