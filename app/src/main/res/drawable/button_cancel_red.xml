<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <!--      <stroke android:width="1dp" android:color="@color/md_red_700" />  -->
            <solid android:color="@color/md_red_300"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/orangePrimary" />
            <solid android:color="@color/md_red_300"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <!--     <stroke android:width="1dp" android:color="@color/md_red_700" />  -->
                 <solid android:color="@color/metro_red"/>
             </shape>
         </item>
     </selector>