<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/md_grey_100" />
            <stroke
                android:width="2dp"
                android:color="@color/greenapp2" />
            <corners android:radius="2dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/white" />  <!-- 64 -->
            <stroke
                android:width="2dp"
                android:color="@color/md_grey_300" />
            <corners android:radius="2dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</selector>