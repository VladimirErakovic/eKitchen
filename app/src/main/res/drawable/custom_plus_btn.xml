<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:state_pressed="true" >
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/md_green_500" />
                    <solid android:color="@color/md_green_300"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/plus_icon"/>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <bitmap android:src="@drawable/plus_icon"/>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <stroke android:width="1dp" android:color="@color/md_green_300" />
                    <padding  android:left="10dp" android:right="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>